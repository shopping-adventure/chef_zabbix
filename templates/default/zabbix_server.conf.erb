############ GENERAL PARAMETERS #################

<% if node['zabbix']['server']['log_file'] -%>
LogFile=<%= node['zabbix']['server']['log_file'] %>
<% end -%>

DBName=<%= @dbname %>
DBUser=<%= @dbuser %>
DBPassword=<%= @dbpassword %>
DBPort=<%= @dbport %>
<%if @dbsocket == 'socket'%>
#Access Db over local socket
DBSocket=<%=node['mysql']['server']['socket']%>
<% else %>
#Access Db over ip
DBHost=<%= @dbhost %>
<%end%>

DebugLevel=<%= node['zabbix']['server']['log_level'] %>
PidFile=<%= node['zabbix']['run_dir'] %>/zabbix_server.pid
Include=<%= node['zabbix']['server']['include_dir'] %>
AlertScriptsPath=<%= node['zabbix']['alert_dir'] %>

HousekeepingFrequency=<%= node['zabbix']['server']['housekeeping_frequency']%>
MaxHousekeeperDelete=<%= node['zabbix']['server']['max_housekeeper_delete'] %>

JavaGateway=<%= @java_gateway %>
JavaGatewayPort=<%= @java_gateway_port %>
StartJavaPollers=<%= @java_pollers %>

ExternalScripts=<%= node['zabbix']['server']['externalscriptspath'] %>
ListenIP=<%count=0; node['zabbix']['web']['ip'].each do |ip|; if count==1%>,<%end%><%=ip%><%count=1 end%>

FpingLocation=/usr/bin/fping
Fping6Location=/usr/bin/fping6

StartPingers=<%= node['zabbix']['server']['startpinger'] %>

StartPollers=<%= node['zabbix']['server']['startpoller'] %>

StartHTTPPollers=<%= node['zabbix']['server']['starthttppoller'] %>

Timeout=<%= node['zabbix']['server']['timeout']%>
CacheSize=<%= node['zabbix']['server']['cachesize']%>
